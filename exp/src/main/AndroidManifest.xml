<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fileexplorer"

    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:required="true" android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
       >
        <activity
            android:name=".FileexplorerActivity"
            android:label="@string/title_activity_fileexplorer"
            android:theme="@android:style/Theme.Holo" >
           <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        
        <activity
            android:name=".FileChooser"
            android:label="Choose File" 
             android:theme="@android:style/Theme.Holo"> 
                <action android:name="com.example.fileexplorer.FileChooser" />

                <category android:name="android.intent.category.DEFAULT" /> 
        </activity>
        
    </application>

</manifest>
